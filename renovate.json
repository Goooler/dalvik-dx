{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^.github/workflows/.*\\.ya?ml$"],
      "matchStrings": ["java-version: (?<currentValue>\\d+)\\n"],
      "datasourceTemplate": "java-version"
    }
  ]
}
